@model Lab12.Models.Message

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Новое сообщение</h2>

@using (Html.BeginForm("SendTheNewMessage", "Chat", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-horizontal">
            <hr />
            Кому
            <div class="form-group">
                <div class="col-md-4">
                    <input type="text" name="User" />
                </div>
            </div>
            Заголовок
            <div class="form-group">
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.TitleMessage)
                </div>
            </div>
            Текст сообщения
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.TextMessage, 10, 100, null)
                </div>
            </div>

            <div>
                <input type="submit" value="Отправить" class="btn" />
            </div>

        </div>

    </div>
}

<br />
<br />

@using (Html.BeginForm("Index", "Chat", FormMethod.Post))
{
    <button class="btn">Вернуться</button>
}